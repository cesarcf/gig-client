			//border-left hidden;//6px solid $table-border-color



// Border-Insite Version
//
// add border dentro de la tabla:
.table-border-insite
	tbody
		> tr
			> td
				//Border para las celdas
				border 1px solid $table-border-color


// Zebra version
//
// Default zebra styles (alternating gray and transparent backgrounds)
.table-zebra
	tbody
		//filas impares(odd), filas pares(even)
		> tr:nth-child(odd),
		> tr:nth-child(even)
			> td,
			> th
				background-color $table-background-color-zebra

// Hover version
//
// Colocado aqui ya que se aplica despues del efecto de Zebra.
.table-hover
	tbody
		> tr:hover
			> td,
			> th
				background-color $table-background-color-hover




