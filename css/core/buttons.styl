// Core styles
.btn
	//Position y Display:
	display inline-block
	position relative

	//Box-Model:
	padding $padding-vertical $padding-horizontal
	margin-bottom 0 // For input.btn
	font-size $font-size
	font-weight normal
	text-transform uppercase
	line-height $line-height
	text-align center
	vertical-align initial //middle
	white-space nowrap
	cursor pointer

	//Maquillaje:
	color $text-color//#555
	text-shadow 0 1px rgba(255, 255, 255, 0.75)
	border 1px solid darken(#ccc, 10%)
	border-bottom-color darken(#ccc, 10%)
	border-radius $border-radius-xs
	//Mixin
	user-select(none)

	//Color de fondo:
	background-color #ccc
	//Imagen de fondo (Gradiente)
	background-image linear-gradient(to bottom, #f3f3f3 0%, #cccccc 100%)
	//background-image radial-gradient(#fff -72%, #eaf3eb -54%, #bbb 80%, #FFFFFF 180%)
	//Hago que no se repita el gradiente:
	background-repeat no-repeat
	//Sombra interior en Y y sombra exterior en Y:
	box-shadow 0 1px 0 rgba(255,255,255,.2) inset, 0 1px 2px rgba(0,0,0,.05)

	&:focus
		outline none


	&:hover,
	&:focus
		//Maquillaje:
		color @color
		text-decoration none
		box-shadow none
		background-position 0 -15px
		transition background-position 0.1s linear

	//Cuando pulsamos el boton o tiene la clase .active:
	&:active,
	&.active
		//Box-Model:
		//top 1px //Hace que se mueva hacia abajo haciendo parecer que lo presiona.
		outline 0

		//Maquillaje:
		color rgba(@color,.85)
		background-image none
		background-color #ccc
		box-shadow 0 2px 4px rgba(0,0,0,.5) inset, 0 1px 2px rgba(0,0,0,.05)


	&.disabled,
	&[disabled],
	fieldset[disabled] &  // & -> se refiere a .btn  (fieldset[disable] .btn)
		cursor not-allowed
		pointer-events none // Future-proof disabling of clicks. prevents all click, state and cursor options on the specified HTML element
		opacity 0.6
		//Maquillaje:
		box-shadow none
		background-image none
		background-color #ccc
		color rgba(0,0,0,.5)

	// Margen cuando hay un <span class="icon-*" con un <span>texto</span> dentro del btn
	span[class^='icon-'] + span
		// display inline-block
		margin-left 3px


