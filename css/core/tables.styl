table
	max-width 100%
	background-color $table-background-color
	font-weight 300

	th
		text-align left
		a
			color $text-color;// $green-light

			&:hover
				color $green-light
				text-decoration none

	td
		&[class="icon"]
			width 37px
			text-align center
			padding-left 0px
			padding-right 0px

			//Para el icono de seguimiento de la lista de usuarios
			> a
				//Para mostrar la mano cuando solo tengo un icono dentro del ancor
				cursor pointer

		a
			color $green-darker

			&:hover
				color $green-darker
				text-decoration none




// Baseline styles for Tables
//
// aÃ±ade los estilos bases a la table
.table
	width 100%
	margin-bottom $line-height-computed
	margin 0 auto
	font-family $font-family-header
	font-weight 100

	//El titulo de la tabla (top, bottom)
	caption
		caption-side left
		text-align left
		font-size 2em
		letter-spacing -1px
		color $green
		font-weight bold //bolder|lighter|100|200|300|...|900
		text-transform uppercase
		margin-bottom .1em

	//Cells

	tbody,
	tfoot
		> tr
			> td
				padding $table-cell-padding
				line-height $line-height
				vertical-align middle
				border-top 1px solid $table-border-color


	thead
		font-family $font-family-form
		font-weight 100
		color $text-color
		text-transform uppercase

		> tr:first-child
			border-top 3px solid $green
		> tr:last-child
			border-bottom 1px solid $table-border-color

			> th
				vertical-align bottom
				border-bottom 0px solid $table-border-color


	tfoot
		font-weight 300
		color $text-color
		// color $green-light
		// background-color lighten($green-lighter, 80%)

		> tr:first-child
			> td
				border-top 3px solid $table-border-color

		//Texto descripcion de la ultima fila del tfoot
		> tr:last-child
			> td
				border-top 1px solid $table-border-color


	//Eliminamos del primer tr del thead el borde superior
	caption + thead,
	colgroup + thead,
	thead:first-child
		tr:first-child
			th,
			td
				border-top 0

	tbody + tbody
		border-top 3px solid $table-border-color

	.table
		background-color $body-background-color

	//TR de Notes del Usuario
	.notes
		div
			display inline-block
			vertical-align middle
			margin-right 8px
			a
				display block
				width 30px
				&:first-of-type
					margin-bottom 6px

			&.data-ads
				display block
				font-size 14px
				font-weight 100
				letter-spacing 0px
				margin-left 50px
				margin-bottom 5px
				&.hide
					display none


		textarea
			display inline-block
			vertical-align middle
			height 60px !important
			max-height 60px
			font-size 16px
			width 97.5% !important
			margin 0px 5px 0px 0px





// Padding Version
//
// add padding a las Celdas:
.table-padding
	thead,
	tbody,
	tfoot
		> tr
			> th,
			> td
				padding $table-cell-padding-extended

