//Padding:
$table-cell-padding =				5px
$table-cell-padding-extended =		8px

//Colores:
$table-background-color =			transparent
$table-background-color-zebra =		lighten($gray-lighter, 50%)
$table-background-color-hover =		lighten($green-lighter, 80%)
$table-background-active =			$table-background-color-hover

//Bordes:
$table-border-color =				$gray-light

