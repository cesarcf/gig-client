// Button Variant
// -------------------------
button-variant($color-text, $color-background)
	@extends .btn

	//Maquillaje:
	color $color-text
	text-shadow none
	background-color $color-background
	background-image linear-gradient(to bottom, lighten($color-background, 20%) 5%, $color-background 100%)
	border-color darken($color-background, 30%)

	&:hover,
	&:focus,
	&:active,
	&.active,
	.open .dropdown-toggle&
		color @color
		background-color @background-color


	&:active,
	&.active,
	.open .dropdown-toggle&
		background-image none


	&.disabled,
	&[disabled],
	fieldset[disabled] &
		&,
		&:hover,
		&:focus,
		&:active,
		&.active
			color rgba(@color, .85) //El mismo color un poco difuminado
			background-color @background-color
			border-color @border-color


// Button sizes
// -------------------------
button-size(padding-vertical, padding-horizontal, font-size, line-height, border-radius)
	padding padding-vertical padding-horizontal
	font-size font-size
	line-height line-height
	border-radius border-radius

