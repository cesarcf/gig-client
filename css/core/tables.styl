//////////////////////////////////////////////////////////////////////////////
//Hay que poner en el contenedor de la tabla la clase: 'table-responsive'
//////////////////////////////////////////////////////////////////////////////
.table-responsive
	margin-bottom 15px
	overflow-y hidden
	overflow-x scroll

	//Aprieta el espacio y le da un color de fondo
	> .table
		margin-bottom 0
		background-color #fff

		// Asegura que el contenido se ajuste
		> thead,
		> tbody,
		> tfoot
			> tr
				> td,
				> th
					white-space nowrap // no rompe la linea, hace que el texto continue...

