//////////////////////////////////////////
////// HEADER //////////////////////
//////////////////////////////////////////
div.header
	position fixed
	top 0px
	display flex
	flex-wrap wrap
	justify-content space-between
	align-items flex-start
	width 100%
	height 65px
	font-family $font-family-header
	border-bottom 1px solid $green-darker
	background-color lighten($green-lighter, 90%)
	z-index 10000000
	transition all 0.3s ease-in-out

	&.show
		height 165px

	div.logo
		display none
		margin 0px 0px 0px 10px
		justify-content center
		align-items center
		height @height
		@media $media-screen-min-tablet
			display flex
			margin-top 0px
		a
			img
				height 54px

				@media $media-screen-min-tablet
					height 64px

		h3
			margin 0px



	//MI CUENTA
	div.account
		position static
		display flex
		flex-direction column
		justify-content center
		align-items flex-end
		margin 0px 10px 0px auto
		width 200px
		height 64px
		white-space nowrap
		overflow hidden

		p
			font-size 0.8em
			margin 0px 0px -5px 0px

		a
			font-size 0.8em
			&.open
				&:before
					@extend .icon-awesome-folder-open-o:before
					left -3px

			&.close
				&:before
					@extend .icon-awesome-folder-o:before
					left -3px

		ul.nav-links
			position absolute
			display flex
			flex-direction column
			align-items stretch
			width auto
			height auto
			top 60px
			right 10px

			margin 0px
			padding 0px
			list-style-type none
			border-radius 5px
			padding 10px 5px 5px 5px
			background-color #fff
			box-shadow 0px 0px 10px 1px $gray-light
			z-index 101

			li
				display flex
				flex-direction column
				justify-content center
				align-items flex-end
				padding 0px 5px 0px 0px
				margin 0px 0px 10px 0px
				p
					font-size 0.7em
					margin 0px 0px -5px 0px

					span
						margin 0px 5px 0px 0px


