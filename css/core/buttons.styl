// --------------------------------------------------
//

.btn-lg,
.btn-group-lg > .btn
	// line-height: ensure even-numbered height of button next to large input
	button-size($padding-lg-vertical, $padding-lg-horizontal, $font-size-lg, $line-height-lg, $border-radius-xs)

.btn-md,
.btn-group-md > .btn
	// line-height: ensure even-numbered height of button next to large input
	button-size($padding-vertical, $padding-horizontal, $font-size, $line-height, $border-radius-xs)

.btn-sm,
.btn-group-sm > .btn
	// line-height: ensure proper height of button next to small input
	button-size($padding-sm-vertical, $padding-sm-horizontal, $font-size-sm, $line-height-sm, $border-radius-xs)

.btn-xs,
.btn-group-xs > .btn
	// line-height: ensure proper height of button next to small input
	button-size($padding-xs-vertical, $padding-xs-horizontal, $font-size-xs, $line-height-xs, $border-radius-xs)




// Block button
// --------------------------------------------------

.btn-block
	display block
	width 100%
	padding-left 0
	padding-right 0

// Espacio vertical de separacion con multiples btn en bloque -> .block
.btn-block + .btn-block
	margin-top 5px

// Specificity overrides
input[type="submit"],
input[type="reset"],
input[type="button"]
	&.btn-block
		width 100%



