// Link buttons
// -------------------------
// Make a button look and behave like a link
.btn-link
	color $green;//$link-color
	font-weight bold
	cursor pointer
	border-radius 0


	&,
	&:active,
	&[disabled],
	fieldset[disabled] &
		background-color transparent
		box-shadow none
		background-image none

	&,
	&:hover,
	&:focus,
	&:active
		border-color transparent


	&:hover,
	&:focus
		outline none
		color $link-hover-color
		text-decoration underline
		background-color transparent


	&[disabled],
	fieldset[disabled] &
		&:hover,
		&:focus
			color $gray-light
			text-decoration none



	//Botn dentro de un formulario. pej: CANCELAR
	form &
		color $green-lighter
		font-weight 400
		text-decoration none
		&:hover,
		&:focus
			color $green

		&[disabled]
			background-color transparent
			color lighten(@color, 30%)
			text-decoration none



